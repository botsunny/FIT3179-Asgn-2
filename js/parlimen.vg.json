{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "15th Malaysian General Election",
    "width": 800,
    "height": 400,
    "projection": {"type": "equalEarth"},
    "data": {
      "url": "https://raw.githubusercontent.com/botsunny/FIT3179-Viz-2/main/data/parlimen.json",
      "format": {"type": "topojson", "feature": "parlimen"}
    },
    "transform": [
      {
        "lookup": "properties.parlimen",
        "from": {
          "data": {
            "url": "https://raw.githubusercontent.com/botsunny/FIT3179-Viz-2/main/data/results_parlimen_ge15.csv"
          },
          "key": "parlimen",
          "fields": ["undi_dalam_peti"]
        }
      },
      {"calculate": "datum.undi_dalam_peti", "as": "Votes cast"}
    ],
    "mark": {"type": "geoshape"},
    "encoding": {
      "color": {
        "field": "Votes cast",
        "type": "quantitative",
        "scale": {"type": "log"}
      },
      "tooltip": [
        {"field": "properties.parlimen", "type": "nominal", "title": "Constituency"},
        {"field": "undi_dalam_peti", "type": "quantitative"}
      ]
    }
  }