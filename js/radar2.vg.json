  "data": [
    {
      "name": "table",
      "url": "https://raw.githubusercontent.com/botsunny/FIT3179-Viz-2/main/data/wrangled_economic_factors.csv",
      "format": {"type": "csv", "delimiter": ","},
      "transform": [
          {"type": "filter", "expr": "reg_select == null || datum.parlimen == reg_select"}
      ]
    },
    {
      "name": "variables",
      "source": "table",
      "transform": [
        {
          "type": "aggregate",
          "groupby": ["variable"]
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "angular",
      "type": "point",
      "range": {"signal": "[-PI, PI]"},
      "padding": 0.5,
      "domain": {"data": "table", "field": "variable"}
    },
    {
      "name": "radial",
      "type": "linear",
      "range": {"signal": "[0, radius]"},
      "zero": true,
      "nice": false,
      "domain": {"data": "table", "field": "value"},
      "domainMin": 0
    },
    {
      "name": "color",
      "type": "ordinal",
      "domain": {"data": "table", "field": "parlimen"},
      "range":{"scheme":"darkblue"}
    }
  ],
  "encode": {
    "enter": {
      "x": {"signal": "radius"},
      "y": {"signal": "radius"}
    }
  },
  "marks": [
    {
      "type": "group",
      "name": "categories",
      "zindex": 1,
      "from": {
        "facet": {"data": "table", "name": "facet", "groupby": ["parlimen"]}
      },
      "marks": [
        {
          "type": "line",
          "name": "category-line",
          "from": {"data": "facet"},
          "encode": {
            "enter": {
              "tooltip":{"signal": "{'Constituency': datum.parlimen,'Social factor': datum.variable, 'Value': datum.value}"},
              "interpolate": {"value": "linear-closed"},
              "x": {"signal": "scale('radial', datum.value) * cos(scale('angular', datum.variable))"},
              "y": {"signal": "scale('radial', datum.value) * sin(scale('angular', datum.variable))"},
              "stroke": {"scale": "color", "field": "parlimen"},
              "strokeWidth": {"value": 1},
              "fill": {"scale": "color", "field": "parlimen"},
              "fillOpacity": {"value": 0.1}
            }
          }
        }
      ]
    },
    {
      "type": "rule",
      "name": "radial-grid",
      "from": {"data": "variables"},
      "zindex": 0,
      "encode": {
        "enter": {
          "x": {"value": 0},
          "y": {"value": 0},
          "x2": {"signal": "radius * cos(scale('angular', datum.variable))"},
          "y2": {"signal": "radius * sin(scale('angular', datum.variable))"},
          "stroke": {"value": "lightgray"},
          "strokeWidth": {"value": 1}
        }
      }
    },
    {
      "type": "line",
      "name": "outer-line",
      "from": {"data": "radial-grid"},
      "encode": {
        "enter": {
          "interpolate": {"value": "linear-closed"},
          "x": {"field": "x2"},
          "y": {"field": "y2"},
          "stroke": {"value": "lightgray"},
          "strokeWidth": {"value": 1}
        }
      }
    },
    {
      "type": "text",
      "name": "key-label",
      "from": {"data": "variables"},
      "zindex": 1,
      "encode": {
        "enter": {
          "x": {"signal": "(radius-1) * cos(scale('angular', datum.variable))"},
          "y": {"signal": "(radius-1) * sin(scale('angular', datum.variable))"},
          "text": {"field": "variable"},
          "align": [
            {
              "test": "abs(scale('angular', datum.variable)) > PI / 2",
              "value": "left",
              "padding":20
            },
            {
              "value": "center"
            }
          ],
          "baseline": [
            {
              "test": "scale('angular', datum.variable) > 0", "value": "bottom"
            },
            {
              "test": "scale('angular', datum.variable) == 0", "value": "top"
            },
            {
              "value": "top"
            }
          ],
          "fill": {"value": "black"},
          "fontWeight":{"value": "bold"},
          "fontSize":{"value": 12},
          "dx":{"value": -20}
        }
      }
    }
  ],
  "opacity": {"value": 0.6}
}